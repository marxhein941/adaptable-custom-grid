<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="OpalAdaptable" constructor="GridChangeTracker" version="0.0.3" display-name-key="GridChangeTracker" description-key="Grid with change tracking and aggregation" control-type="virtual" >
    <external-service-usage enabled="false">
    </external-service-usage>

    <!-- Dataset for the grid -->
    <data-set name="gridDataset" display-name-key="Grid Dataset">
    </data-set>

    <!-- Configuration properties -->
    <property name="enableChangeTracking"
              display-name-key="Enable Change Tracking"
              description-key="Show visual indicators for changed cells"
              of-type="TwoOptions"
              usage="input"
              required="false"
              default-value="true"/>

    <property name="changedCellColor"
              display-name-key="Changed Cell Background Color"
              description-key="Background color for modified cells"
              of-type="SingleLine.Text"
              usage="input"
              required="false"
              default-value="#FFF4CE"/>

    <property name="aggregationMode"
              display-name-key="Aggregation Mode"
              description-key="Type of aggregation to display"
              of-type="Enum"
              usage="input"
              required="false"
              default-value="1">
      <value name="Sum" display-name-key="Sum (Total)">1</value>
      <value name="None" display-name-key="None">0</value>
    </property>

    <property name="showChangeIndicator"
              display-name-key="Show Change Asterisk"
              description-key="Display asterisk (*) for changed cells"
              of-type="TwoOptions"
              usage="input"
              required="false"
              default-value="true"/>

    <property name="readOnlyFields"
              display-name-key="Read-Only Fields"
              description-key="Comma-separated list of field names that should be read-only (e.g., fieldname1,fieldname2). Can use commas or new lines as separators."
              of-type="Multiple"
              usage="input"
              required="false"
              default-value=""/>

    <property name="useDescriptionAsColumnName"
              display-name-key="Use Description as Column Name"
              description-key="Use the table Description field as column headers for shorter names. Display Name will be shown in tooltips."
              of-type="TwoOptions"
              usage="input"
              required="false"
              default-value="false"/>

    <property name="enableRowsField"
              display-name-key="Enable Rows Field"
              description-key="Column name to check for row-level editing control. Leave empty to edit all rows. (e.g., opalcrm_ActFcst)"
              of-type="SingleLine.Text"
              usage="input"
              required="false"
              default-value=""/>

    <property name="enableRowsValue"
              display-name-key="Enable Rows Value"
              description-key="Value that allows row editing. Only rows with this value will be editable, others will be read-only. (e.g., Forecast)"
              of-type="SingleLine.Text"
              usage="input"
              required="false"
              default-value=""/>

    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
      <css path="css/GridChangeTracker.css" order="1" />
    </resources>

    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
</manifest>
